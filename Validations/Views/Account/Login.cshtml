@model Validations.Models.Login
@{
    ViewData["Title"] = "Login";

}
<h1>Login</h1>
@using (Html.BeginForm())
{
    <table class="table table-bordered">
        <tr>
            <td>
                @Html.DisplayNameFor(m=>m.Uname)
            </td>
            <td>
                @Html.EditorFor(m=>m.Uname)
            </td>
            <td>
                @Html.ValidationMessageFor(m=>m.Uname)
            </td>
        </tr>
        <tr>
            <td>
                @Html.DisplayNameFor(m => m.Pwd)
            </td>
            <td>
                @Html.EditorFor(m => m.Pwd)
            </td>
            <td>
                @Html.ValidationMessageFor(m => m.Pwd)
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Login" />
            </td>
        </tr>
    </table>
}

